@model IEnumerable<Saleular.Models.Gadget>

@{
    ViewBag.Title = "Manage Gadgets";
}

<div class="col-lg-10 col-md-10 col-sm-10">
    <h4>The list of iPhones that Saleular will buy from a customer</h4>
    <hr />
    <p>
        @Html.ActionLink("Add New Gadget", "Create", null, new { @class = "btn btn-sm btn-info" })
    </p>
    <table class="table table-condensed table-responsive table-striped table-hover">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="row">
                        <div class="col-lg-4 col-md-4">
                            <b>Type</b> = @Html.DisplayFor(modelItem => item.Type)
                            <br />
                            <b>Model</b> = @Html.DisplayFor(modelItem => item.Model)
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <b>Capacity</b> = @Html.DisplayFor(modelItem => item.Capacity)
                            <br />
                            <b>Carrier</b> = @Html.DisplayFor(modelItem => item.Carrier)
                            <br />
                            <b>Condition</b> = @Html.DisplayFor(modelItem => item.Condition)
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <b>Image URL</b> = @Html.DisplayFor(modelItem => item.ImageUrl)
                            <br />
                            <b>Price</b> = @Html.DisplayFor(modelItem => item.Price)
                        </div>
                    </div>
                </td>
                <td style="text-align: right">
                    @Html.ActionLink("Edit", "Edit", new { id = item.GadgetId }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Details", "Details", new { id = item.GadgetId }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.GadgetId }, new { @class = "btn btn-sm btn-info" })
                </td>
            </tr>
        }
    </table>
</div>
@section header
{
    <div class="col-lg-12 col-md-12">
        <h2>Manage Gadgets</h2>
    </div>
}
@section scripts
{

}
