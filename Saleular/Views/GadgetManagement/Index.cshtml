@model IEnumerable<Saleular.Models.Gadget>

@{
    ViewBag.Title = "Manage Gadgets";
}

<h2>Manage Gadgets</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-condensed table-responsive table-striped table-hover">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="row">                    
                    <div class="col-lg-4 col-md-4">
                        @Html.DisplayFor(modelItem => item.Type)
                        <br />
                        @Html.DisplayFor(modelItem => item.Model)
                    </div>
                    <div class="col-lg-4 col-md-4">
                        @Html.DisplayFor(modelItem => item.Capacity)
                        <br />
                        @Html.DisplayFor(modelItem => item.Carrier)
                        <br />
                        @Html.DisplayFor(modelItem => item.Condition)
                    </div>
                    <div class="col-lg-4 col-md-4">
                        @Html.DisplayFor(modelItem => item.ImageUrl)
                        <br />
                        @Html.DisplayFor(modelItem => item.Price)
                    </div>
                </div>                
            </td>
            <td style="text-align: right">
                @Html.ActionLink("Edit", "Edit", new { id = item.GadgetId }, new { @class = "btn btn-sm btn-info" })
                @Html.ActionLink("Details", "Details", new { id = item.GadgetId }, new { @class = "btn btn-sm btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.GadgetId }, new { @class = "btn btn-sm btn-info" })
            </td>
        </tr>
    }
</table>

@section scripts
{
    
}
