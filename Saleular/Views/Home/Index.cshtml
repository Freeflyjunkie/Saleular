@{
    ViewBag.Title = "Sell Your iPhone";
}


<style>
    #offerpanel {
        padding: 0px;
        margin: 0px;
    }

    #offerspaid {
        padding: 0px;
        margin: 0px;
    }

    .panel-heading {
        padding: 3px 3px 3px 3px;
    }

    .panel-body {
        padding: 7px 7px 7px 7px;
    }

    .alert{
        margin: 0px 0px 0px 0px;
        padding: 15px 0px 0px 0px;
        font-size: 15px;
    }        
</style>
<script type="text/javascript">
    $(DocumentIsReady);
    function DocumentIsReady() {

        var c = $('#carousel');
        c.carousel();

        c.on('slid', function () {
            var index = $(this).find('.active').index();
            var caption = "";
            var captiondesc = "";

            if (index == 0) {
                caption = "Get an Offer";
                captiondesc = "Get an offer on your phone quickly that is guarenteed to beat our competitors.";
            }

            if (index == 1) {
                caption = "Ship It";
                captiondesc = "Request a free shipping label and ship your phone quickly and easily using Fedex or the USPS.";
            }

            if (index == 2) {
                caption = "Get Paid";
                captiondesc = "Once your iPhone is received and processed you will receive payment via PayPal or a check.";
            }

            $('#carouselCaption').text(caption);
            $('#carouselCaptionDesc').text(captiondesc);
        });
    }
</script>
<section class="row">
    <div class="col-lg-12 col-md-12 visible-lg visible-md">
        <div style="float: left; padding-right: 20px">
            <h2 id="carouselCaption">Get an Offer</h2>
        </div>
        <div id="carouselCaptionDesc" class="alert" style="float: left; margin-top: 0px">
            Get an offer on your phone quickly that is guarenteed to beat our competitors.
        </div>
    </div>
</section>
<section class="row">
    <section class="col-lg-9 col-md-8">
        <div style="margin-bottom: 10px" class="carousel slide visible-lg visible-md" data-interval="5000" id="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/Carousel/c1.jpg" class="img-responsive" alt="1" />

                </div>
                <div class="item">
                    <img src="~/Images/Carousel/c2.jpg" class="img-responsive" alt="2" />

                </div>
                <div class="item">
                    <img src="~/Images/Carousel/c3.jpg" class="img-responsive" alt="3" />

                </div>
            </div>
            <a href="#carousel" class="carousel-control left" data-slide="prev"><span class="icon-prev"></span></a>
            <a href="#carousel" class="carousel-control right" data-slide="next"><span class="icon-next"></span></a>
        </div>
