    ViewBag.Title = "Sell Your iPhone";
}


<style>
    #offerpanel {
        padding: 0px;
        margin: 0px;
    }

    #offerspaid {
        padding: 0px;
        margin: 0px;
    }

    .panel-heading {
        padding: 3px 3px 3px 3px;
    }

    .panel-body {
        padding: 7px 7px 7px 7px;
    }

    .alert {
        margin: 0px 0px 0px 0px;
        padding: 15px 0px 0px 0px;
        font-size: 15px;
    }
</style>
<script type="text/javascript">
    $(DocumentIsReady);
    function DocumentIsReady() {

        var c = $('#carousel');
        c.carousel();

        c.on('slid', function () {
            var index = $(this).find('.active').index();
            var cdiv = $('#carouselDiv');

            cdiv.animate({
                opacity: 0
            }, 100, 'swing', function () {
                $('#carouselCaption').text(GetCarouselCaption(index));                
            });

            cdiv.animate({
                opacity: 1
            }, 250);
        });
    }

    function GetCarouselCaption(index) {
        if (index == 0) {
            return "Step 1: Get a Quick Offer For Your iPhone";
        }

        if (index == 1) {
            return "Step 2: Get a Free Shipping Label";
        }

        if (index == 2) {
            return "Step 3: Get Paid Fast!";
        }
    }

    function GetCarouselCaptionDesc(index) {
        if (index == 0) {
            return "Get an offer on your phone quickly that is guaranteed to beat our competitors.";
        }

        if (index == 1) {
            return "Request a free shipping label and ship your phone quickly and easily using Fedex or the USPS.";
        }

        if (index == 2) {
            return "Once your iPhone is received and processed you will receive payment via PayPal or a check.";
        }
    }
</script>
<section class="row">
    <div id="carouselDiv" class="col-lg-12 col-md-12 visible-lg visible-md">
        <div style="float: left; padding-right: 20px">
            <h2 id="carouselCaption">Step 1: Get a Quick Offer For Your iPhone</h2>
        </div>
        @*<div id="carouselCaptionDesc" class="alert" style="float: left; margin-top: 0px">
                Get an offer on your phone quickly that is guaranteed to beat our competitors.
            </div>*@
    </div>
</section>
