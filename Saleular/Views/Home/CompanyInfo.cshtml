@{
    ViewBag.Title = "Company Information";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div style="margin-bottom: 10px" class="carousel slide hidden-sm hidden-xs" data-interval="6000" id="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active text-center">
            <div class="row">
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 col-lg-offset-3 col-md-offset-3 col-sm-offset-3 col-xs-offset-3">
                    <img src="~/Images/About/contato.jpg" class="img-responsive" alt="1" />
                </div>
            </div>
            <h1 id="customerServiceText">Our Customers Service is #1</h1>            
            <div>
                <h4 id="testimonialsTextHeader">Read testimonials from real customers who rave about our customer service.</h4>                
                <h4 id="testimonialsText1">...I was very impressed and pleased with how everything was handled!<br />Very quick, professional, and easy!</h4>                
                <h4 id="testimonialsText2">...I will never use another company due to the <br />excellent customer service.</h4>
            </div>                        
        </div>  
        <div class="item text-center">
            <div class="row">
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 col-lg-offset-3 col-md-offset-3 col-sm-offset-3 col-xs-offset-3">
                    <img src="~/Images/About/contato.jpg" class="img-responsive" alt="1" />
                </div>
            </div>             
        </div>     
    </div>
    <a id="carousel-left-arrow" href="#carousel" class="carousel-control left" data-slide="prev"><span class="icon-prev"></span></a>
    <a id="carousel-right-arrow" href="#carousel" class="carousel-control right" data-slide="next"><span class="icon-next"></span></a>
</div>
<div class="row hidden-lg hidden-md">
    <div class="col-sm-12 col-xs-12">
        <h2 id="customerServiceText">Our Customers Service is #1</h2>
        <div id="testimonialsText">
            <h2>Read testimonials from real customers who rave about our customer service.</h2>
            <br />
            <h4>...I was very impressed and pleased with how everything was handled!<br />Very quick, professional, and easy!</h4>
            <br />
            <h4>...I will never use another company due to the <br />excellent customer service.</h4>
        </div>   
    </div>
</div>

