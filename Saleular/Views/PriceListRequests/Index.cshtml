@model IEnumerable<Saleular.Models.PriceListRequest>

@{
    ViewBag.Title = "Price List Requests";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="col-lg-10 col-md-10 col-sm-10">
    <h4>The list of requests from customers that requested a price list</h4>
    <hr />
    <p>
        @Html.ActionLink("Add New Price List Request", "Create", null, new { @class = "btn btn-sm btn-info" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BusinessName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaxId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessAreaSelection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BusinessName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BusinessAreaSelection)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PriceListRequestId }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Details", "Details", new { id = item.PriceListRequestId }, new { @class = "btn btn-sm btn-info" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.PriceListRequestId }, new { @class = "btn btn-sm btn-info" })
                </td>
            </tr>
        }
    </table>
</div>
@section header
{
    <div class="col-lg-12 col-md-12">
        <h2>Price List Requests</h2>
    </div>
}
