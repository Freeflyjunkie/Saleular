@{
    ViewBag.Title = "SelectCondition";
}

<style>
    button.btn {
        border-radius: 0px;
    }

    .selected-value {
        height: 35px;
        width: 175px;
        padding: 5px 5px 5px 5px;
        border: 1px solid gray;
    }
</style>
<script>
    $(document).ready(function () {
        var select = $('#conditionSelect');
        var dropdown = $('#conditionDropdown li a');
        WireSelectButton(select, dropdown);
    });

    function WireSelectButton(select, dropdown) {
        dropdown.on('click', function () {
            var iphone = $(this).text();
            select.text(iphone);
        });
    }

</script>

<div class="col-lg-12 col-md-12">
    <h2>Get an Offer on your iPhone</h2>
    <p>
        Start by selecting your device model, carrier, capacity and condition in order to get an offer.
        Once you have selected your iPhone you will see that our offer price beats the other sites.
    </p>
    <hr />
</div>
<div class="col-lg-12 col-md-12">
    <form class="form-horizontal">
        <div class="form-group">
            <div class="col-md-6">
                <div class="input-group">
                    <div class="dropdown">
                        <div class="selected-value box-shadow-dgray" style="float: left" id="conditionSelect">Select Condition...</div>
                        <button class="btn btn-primary box-shadow-dgray" data-toggle="dropdown"><span class="caret"></span></button>
                        <ul class="dropdown-menu" id="conditionDropdown">
                            <li><a href="/Phone/Offer" tabindex="-1">Flawless</a></li>
                            <li><a href="/Phone/Offer" tabindex="-1">Good</a></li>
                            <li><a href="/Phone/Offer" tabindex="-1">Bad</a></li>                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
