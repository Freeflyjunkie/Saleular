@model Saleular.ViewModels.SelectedGadgetViewModel
@{
    ViewBag.Title = "Looking To Sell iPhones";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="col-lg-12 col-md-12">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label for="businessName" class="control-label col-lg-2 col-md-2 col-sm-2">Business Name</label>
            <div class="col-lg-5 col-md-5 col-sm-5">
                <div class="input-group">
                    <span id="businessNameAddon" data-toggle="tooltip" title="What company are you from?" class="input-group-addon box-shadow-dgray"><span class="glyphicon glyphicon-globe"></span></span>
                    <input id="businessName"
                           type="text"
                           name="businessName"
                           class="form-control box-shadow-dgray"
                           placeholder="e.g. The name of your company"
                           data-val="true"
                           data-val-required="Your business name is required" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <span class="control-label field-validation-valid" data-valmsg-for="businessName" data-valmsg-replace="true">
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="control-label col-lg-2 col-md-2 col-sm-2">Name</label>
            <div class="col-lg-5 col-md-5 col-sm-5">
                <div class="input-group">
                    <span id="nameAddon" data-toggle="tooltip" title="Your name please..." class="input-group-addon box-shadow-dgray"><span class="glyphicon glyphicon-user"></span></span>
                    <input id="name"
                           type="text"
                           name="name"
                           class="form-control box-shadow-dgray"
                           placeholder="e.g. Brad Pitt"
                           data-val="true"
                           data-val-required="Your name is required" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <span class="control-label field-validation-valid" data-valmsg-for="name" data-valmsg-replace="true">
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="control-label col-lg-2 col-md-2 col-sm-2">Email</label>
            <div class="col-lg-5 col-md-5 col-sm-5">
                <div class="input-group">
                    <span id="emailAddon" data-toggle="tooltip" title="This email address will be used for later correspondence" class="input-group-addon box-shadow-dgray">&#64;</span>
                    <input id="email"
                           type="email"
                           name="email"
                           class="form-control box-shadow-dgray"
                           placeholder="e.g. bpitt@gmail.com"
                           data-val="true"
                           data-val-required="Your email is required" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <span class="control-label field-validation-valid" data-valmsg-for="email" data-valmsg-replace="true">
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="phone" class="control-label col-lg-2 col-md-2 col-sm-2">Phone Number</label>
            <div class="col-lg-5 col-md-5 col-sm-5">
                <div class="input-group">
                    <span id="phoneAddon" data-toggle="tooltip" title="This phone number will be used for later correspondence" class="input-group-addon box-shadow-dgray"><span class="glyphicon glyphicon-phone"></span></span>
                    <input id="phone"
                           type="text"
                           name="phone"
                           class="form-control box-shadow-dgray"
                           placeholder="e.g. 222-555-1212"
                           data-val="true"
                           data-val-required="Your phone number is required" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <span class="control-label field-validation-valid" data-valmsg-for="phone" data-valmsg-replace="true">
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="address" class="control-label col-lg-2 col-md-2 col-sm-2">Address</label>
            <div class="col-lg-5 col-md-5 col-sm-5">
                <div class="input-group">
                    <span id="addressAddon" data-toggle="tooltip" title="This address will be used for later correspondence" class="input-group-addon box-shadow-dgray"><span class="glyphicon glyphicon-home"></span></span>
                    <input id="address"
                           type="text"
                           name="address"
                           class="form-control box-shadow-dgray"
                           placeholder="e.g. 123 Main Street"
                           data-val="true"
                           data-val-required="Your address is required" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <span class="control-label field-validation-valid" data-valmsg-for="address" data-valmsg-replace="true">
                </span>
            </div>
        </div>
        <hr />
        <p>
            What type of iPhones are you interested in selling?
            <strong><em>Note: Saleular is only interested in iPhones</em></strong>
        </p>
        <div class="form-group">
            <div class="col-lg-5 col-md-5 col-sm-5 col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
                <div class="input-group">
                    <div class="dropdown">
                        <div class="selected-value box-shadow-dgray" style="float: left" id="typeSelection">@Model.SelectedType</div>
                        <button class="btn btn-primary box-shadow-dgray" data-toggle="dropdown"><span class="caret"></span></button>
                        <ul class="dropdown-menu" id="typeDropdown">
                            @foreach (var gadgetType in Model.Types)
                            {
                                <li>
                                    <a href="#">@gadgetType</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <br />
            </div>
            <br/>
            <div class="col-lg-5 col-md-5 col-sm-5 col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
                <div class="input-group">
                    <div class="dropdown">
                        <div class="selected-value box-shadow-dgray" style="float: left" id="modelSelection">@Model.SelectedModel</div>
                        <button class="btn btn-primary box-shadow-dgray" data-toggle="dropdown"><span class="caret"></span></button>
                        <ul class="dropdown-menu" id="modelDropdown"></ul>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="col-lg-5 col-md-5 col-sm-5 col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
                <div class="input-group">
                    <div class="dropdown">
                        <div class=" selected-value box-shadow-dgray" style="float: left" id="carrierSelection">@Model.SelectedCarrier</div>
                        <button class="btn btn-primary box-shadow-dgray" data-toggle="dropdown"><span class="caret"></span></button>
                        <ul class="dropdown-menu" id="carrierDropdown"></ul>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="col-lg-5 col-md-5 col-sm-5 col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
                <div class="input-group">
                    <div class="dropdown">
                        <div class="selected-value box-shadow-dgray" style="float: left" id="capacitySelection">@Model.SelectedCapacity</div>
                        <button class="btn btn-primary box-shadow-dgray" data-toggle="dropdown"><span class="caret"></span></button>
                        <ul class="dropdown-menu" id="capacityDropdown"></ul>
                    </div>
                </div>                
                <br />
            </div>           
            <div class="col-lg-5 col-md-5 col-sm-5 col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
                <div class="input-group">
                    <div class="dropdown">
                        <div class="selected-value box-shadow-dgray" style="float: left" id="conditionSelection">@Model.SelectedCondition</div>
                        <button class="btn btn-primary box-shadow-dgray" data-toggle="dropdown"><span class="caret"></span></button>
                        <ul class="dropdown-menu" id="conditionDropdown"></ul>
                    </div>
                </div>
                <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-11 col-md-11 col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
                <input type="submit" class="btn btn-primary" value="Get a Quote" />
            </div>
        </div>
    </form>
</div>

@section header
{
    <div class="col-lg-12 col-md-12">
        <h2>Looking to Sell iPhones?</h2>
        <p>
            Fill out the form below and one of our sales representatives will call you back.
        </p>
        <hr />
    </div>
}
@section scripts
{
    @Scripts.Render("~/Scripts/validation")
    @Scripts.Render("~/Scripts/phone_sellphone")
}
@section styles
{
    @Styles.Render("~/Content/phone_sellphone")
}
