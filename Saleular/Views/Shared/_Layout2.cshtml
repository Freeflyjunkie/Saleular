@using System
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saleular - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/Scripts/modernizr")
</head>
<body>
    <header class="nav">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="pull-left" style="padding-top: 2px">
                <img src="../../Images/Logos/saleular_sm.png" height="50" alt="" />
            </div>
            <div class="pull-left"><h1>Saleular</h1></div>
            <div class="row pull-right" style="padding-right: 30px">
                @Html.Partial("_LoginPartial")
            </div>
        </div>        
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="menu2">
            <div id="navbar" class="navbar navbar-default">
                <div class="navbar-header">
                    <button class="btn btn-success btn-sm navbar-toggle"
                            data-toggle="collapse"
                            data-target=".navbar-collapse">
                        <span class="glyphicon glyphicon-chevron-down"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul id="navmenu" class="nav navbar-nav navbar-left">
                        <li class="nav">@Html.ActionLink("Home", "Home", "Home")</li>
                        <li class="nav">@Html.ActionLink("Buying iPhones", "PriceList", "Phone")</li>
                        <li class="nav">@Html.ActionLink("Selling iPhones", "SellPhone", "Phone")</li>
                        <li class="nav">@Html.ActionLink("Browse our iPhones", "BrowseSelection", "Phone")</li>
                        <li class="nav">@Html.ActionLink("Company Information", "CompanyInfo", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </header>    
    <div>@RenderSection("header", false)</div>  
    @RenderBody()
    @Scripts.Render("~/Scripts/js")
    @RenderSection("scripts", required: false)
</body>
</html>