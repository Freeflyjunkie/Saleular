<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saleular - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <style>
        h2 {
            -webkit-text-shadow: 2px 2px 2px #888888;
            text-shadow: 2px 2px 2px #888888;
            padding: 0px;
            margin: 0px 0px 10px 0px;
        }

        h4 {
            font-weight: 400;
        }

        .bor {
            border: 1px solid red;
        }

        .borb {
            border: 1px solid blue;
        }

        /*.navbar {
            margin-bottom: 0px;
        }*/

        #logo-text {
            margin: 0px 0px 0px 0px;
            font-size: 50px;
            font-family: Cambria, 'Times New Roman', 'Nimbus Roman No9 L', 'Freeserif', Times, serif;       
        }

        #guarenteed-text {
            margin: 20px 0px 0px 0px;
        }            
    </style>

</head>
<body>
    <div id="page">
        <header class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12 text-left">
                    <div class="pull-left" style="padding-top: 2px">
                        <img src="../../Images/Logos/saleular_sm.png" height="50" alt="" />
                    </div>
                    <div class="pull-left"><h1 id="logo-text">Saleular</h1></div>
                </div>
                <div id="guarenteed-text" class="col-lg-9 col-md-8 visible-lg visible-md text-right lead">
                    <span>Get the most for your used or new iPhone <strong><em>Guarenteed!</em></strong></span>
                </div>
            </div>
            <div class="row visible-sm visible-xs text-left">
                <div class="col-sm-12 col-xs-12">
                    We pay the most for your used or new iPhone <strong><em>Guarenteed!</em></strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="menu" class="navbar navbar-default">
                        <div class="navbar-header">
                            <button class="btn btn-success btn-sm navbar-toggle"
                                    data-toggle="collapse"
                                    data-target=".navbar-collapse">
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-right">
                                <li class="nav active">@Html.ActionLink("Home", "Index", "Home")</li>
                                <li class="nav">@Html.ActionLink("Get An Offer", "Index", "Home")</li>
                                <li class="nav">@Html.ActionLink("Ask A Questions", "Index", "Home")</li>
                                <li class="nav">@Html.ActionLink("Testimonials", "Index", "Home")</li>
                                <li class="nav">@Html.ActionLink("About Us", "About", "Home")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Saleular</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
