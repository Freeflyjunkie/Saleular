<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saleular - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .bor {
            border: 1px solid red;
        }
        .borb {
            border: 1px solid blue;
        }

        .jumbotronText {
            font-size: 60px;
            font-weight: 200;
            color: white;
            padding: 0px;
            margin: 0px;
        }
    </style>

</head>
<body>
    <div class="navbar-fixed-top">
        <div class="navbar nav-tabs">
            <div class="container pull-left">
                <div class="row">
                    <div class="col-md-4 left">
                        <h1 class="jumbotronText">Saleular</h1>
                    </div>
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse col-md-8 bottom">
                        <ul class="nav navbar-nav navbar-btn">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Get An Offer", "Index", "Home")</li>
                            <li>@Html.ActionLink("Ask A Questions", "Index", "Home")</li>
                            <li>@Html.ActionLink("Testimonials", "Index", "Home")</li>
                            <li>@Html.ActionLink("About Us", "About", "Home")</li>
                        </ul>
                    </div>
                    @*@Html.Partial("_LoginPartial")*@
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">       
        <br/> 
        @RenderBody()       
        <footer>
            <p>&copy; @DateTime.Now.Year - Saleular</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
