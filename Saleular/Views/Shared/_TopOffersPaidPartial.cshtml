@model Saleular.ViewModels.TopOffersViewModel
<section>
    <h2>Top Offers Paid</h2>
</section>
<section id="offerpanel" class="panel panel-primary">
    <article class="panel-body">
        @{
            int index = 0;
            int count = Model.Gadgets.Count();
            foreach (var item in Model.Gadgets)
            {
                <div class="pull-left" style="width: 70px; text-align: center;">
                    @{
                string imagePath = item.ImageUrl + ".png";
                switch (item.Condition)
                {
                    case "Flawless":
                        imagePath = item.ImageUrl + ".png";
                        break;

                    case "Good":
                        imagePath = item.ImageUrl + "_Good.jpg";
                        break;

                    case "Bad":
                        imagePath = item.ImageUrl + "_Bad.jpg";
                        break;
                }
                    }
                    <img src="@imagePath" alt="iPhone" style="height: 85px" />
                </div>
                <div class="pull-left">
                    <div><label class="offerspaid-label">Phone</label> <label class="offerspaid-value">@item.Type @item.Model</label></div>
                    <div><label class="offerspaid-label">Capacity</label> <label class="offerspaid-value">@item.Capacity</label></div>
                    <div><label class="offerspaid-label">Carrier</label> <label class="offerspaid-value">@item.Carrier</label></div>
                    <div><label class="offerspaid-label">Condition</label> <label class="offerspaid-value">@item.Condition</label></div>
                    <div class="lead offerspaid-price">@Html.DisplayFor(modelItem => item.Price)</div>
                    <div style="clear: both"></div>
                </div>
                index++;
            }
        }

    </article>
</section>
